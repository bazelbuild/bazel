load("@rules_python//python:py_binary.bzl", "py_binary")

py_binary(
    name = "runfiles-py",
    srcs = ["foo.py"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-cc",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    main = "foo.py",
    deps = ["@bazel_tools//tools/python/runfiles"],
)

java_binary(
    name = "runfiles-java",
    srcs = ["Foo.java"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-cc",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    main_class = "Foo",
    deps = ["@bazel_tools//tools/java/runfiles"],
)

sh_binary(
    name = "runfiles-sh",
    srcs = ["foo.sh"],
    data = [
        "datadep/hello.txt",
        "//bar:bar-cc",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    deps = ["@bazel_tools//tools/bash/runfiles"],
)

cc_binary(
    name = "runfiles-cc",
    srcs = ["foo.cc"],
    copts = select({
        "@bazel_tools//src/conditions:windows": ["/DIS_WINDOWS=1"],
        "//conditions:default": [],
    }),
    data = [
        "datadep/hello.txt",
        "//bar:bar-cc",
        "//bar:bar-java",
        "//bar:bar-py",
        "//bar:bar-sh",
    ],
    deps = ["@bazel_tools//tools/cpp/runfiles"],
)
